<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Member Information</title>
    <link rel="stylesheet" href="/css/memberInformation.css">
</head>
<body>
    <div class="container">
        <%- include('partials/header') %>
        <header>
            <h1>Member Information</h1>
        </header>

        <section class="member-info">
            <h2>Members</h2>
            <div class="member-details">
                <% members.forEach(member => { %>
                    <div class="member-card">
                        <img src="/images/members/<%= member.picture %>" alt="<%= member.name %>">
                        <h3><%= member.name %></h3>
                        <p>Email: <%= member.email %></p>
                        <p>Phone: <%= member.phone %></p>
                        <p>Address: <%= member.address %></p>
                        <p>Member Since: <%= member.join_date %></p>
                        <% if (isAdmin) { %>
                            <form action="/members/edit/<%= member.id %>" method="POST">
                                <button type="submit">Edit Member Info</button>
                            </form>
                        <% } %>
                    </div>
                <% }); %>
            </div>
        </section>

    </div>
</body>
</html>
