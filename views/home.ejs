<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/home.css">
    <title>BOCOFAMCO Dashboard</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/scripts.js"></script>
</head>
<body>
    <div class="sidebar">
        <div class="user-profile">
            <a href="#">
                <img src="images/UserPic.jpg" alt="User Avatar" class="avatar">
            </a>
            <h2>User</h2>
        </div>
        <ul class="menu">
            <li><a href="#" onclick="loadSection('/members')"><i class="fa-solid fa-users"></i> <span>Member Information</span></a></li>
            <li><a href="#" onclick="loadSection('/equipment')"><i class="fa-solid fa-truck-ramp-box"></i> <span>Equipment Rentals</span></a></li>
            <li><a href="#" onclick="loadSection('/farm-supplies')"><i class="fa-solid fa-wheat-awn"></i> <span>Farm Supplies</span></a></li>
            <li><a href="#" onclick="loadSection('/loans')"><i class="fa-solid fa-landmark"></i> <span>Loans</span></a></li>
            <li><a href="#" onclick="loadSection('/about')"><i class="fa-solid fa-info-circle"></i> <span>About Us</span></a></li>
            <li><a href="#" onclick="loadSection('/contact')"><i class="fa-solid fa-envelope"></i> <span>Contact Us</span></a></li>
            <li class="logout"><a href="#" onclick="logout()"><i class="fas fa-sign-out-alt"></i> <span>Logout</span></a></li>
        </ul>
    </div>

    <div class="main-content" id="main-content">
        <!-- This is where loaded content will be displayed -->
        <h2>Welcome to BOCOFAMCO Dashboard</h2>
        <p>Select a menu item to view details.</p>
    </div>

    <!-- JavaScript to control visibility of containers and load sections -->
    <script>
        function loadSection(url) {
            $.ajax({
                url: url,
                method: 'GET',
                success: function(data) {
                    $('#main-content').html(data); // Load the response into the main-content div
                },
                error: function(err) {
                    console.error("Error loading content:", err);
                    $('#main-content').html('<p>Error loading content. Please try again.</p>');
                }
            });
        }

        function logout() {
            const confirmation = confirm("Are you sure you want to log out?");
            if (confirmation) {
                window.location.href = "/landing"; // Replace with your actual logout path
            }
        }
    </script>
</body>
</html>
